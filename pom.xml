							<execution>
								<id>attach-descriptor</id>
								<goals>
									<goal>stage</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-scm-publish-plugin</artifactId>
						<version>3.1.0</version>
						<configuration>
							<scmBranch>master</scmBranch>
							<skipDeletedFiles>true</skipDeletedFiles>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
